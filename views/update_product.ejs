<!-- include header -->
<%- include('include/header') %>

<!-- /include header -->

<!-- Main site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Products</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Product</h2>
            <span class="text-light">Use the below form to update a new product</span>
        </div>
        
        <!-- add user form-->
        <!-- form handling -->
        <form method="POST" id="update_product">
            <div class="new_product">
                <div class="form-group">
                    <label for="Product" class="text-light">Product</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="product" value="<%= user.product %>" placeholder="Kursi">
                </div>
                <div class="form-group">
                    <label for="Price" class="text-light">Harga</label>
                    <input type="text" name="price" value="<%= user.price %>" placeholder="100000">
                </div>
                <div class="form-group">
                    <label for="Piece" class="text-light">Jumlah</label>
                    <input type="text" name="piece" value="<%= user.piece %>" placeholder="1">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>

            </div>
        </form>
        <!-- /add user form-->

        <!-- -->
    </div>
</main>
<!-- /Main site-->

<!-- include footer -->
<%- include('include/footer') %>

