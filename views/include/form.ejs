 <!-- form handling -->
 <form action="/api/products" method="POST" id="add_product">
    <div class="new_product">
        <div class="form-group">
            <label for="product" class="text-light">Product</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="product" value="" placeholder="Kursi">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Harga</label>
            <input type="text" name="price" value="" placeholder="100000">
        </div>
        <div class="form-group">
            <label for="piece" class="text-light">Jumlah</label>
            <input type="text" name="piece" value="" placeholder="1">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>